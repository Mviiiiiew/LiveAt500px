<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wazabi.liveat500px">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />

        <meta-data
            android:name="com.wazabi.liveat500px.configuration.GlideConfiguration"
            android:value="GlideModule" />

        <activity
            android:name=".activity.MoreInfoActivity"
            android:theme="@style/AppThemeWithActionBar" />
        <activity android:name=".activity.MainLoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.MainRegisterActivity"></activity>
    </application>

</manifest>